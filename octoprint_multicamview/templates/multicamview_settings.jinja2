<form class="form-horizontal">
	<h4>MultiCamView Settings</h4>
	<div class="row-fluid">
				<div class="span4"><h5>{{ _('URL') }}</h5></div>
				<div class="span2"><h5>{{ _('Type') }}</h5></div>
				<div class="span2"><h5>{{ _('Width') }}</h5></div>
				<div class="span2"><h5>{{ _('Height') }}</h5></div>
				<div class="span2" style="text-align: center;"><a href="#" class="btn btn-mini icon-plus" data-bind="click: addCamera"></a></div>
	</div>
	<div class="row-fluid" data-bind="foreach: settingsViewModel.settings.plugins.multicamview.webcams">
		<div class="row-fluid" style="margin-bottom: 5px">
			<div class="span4"><input type="text" class="input-block-level" data-bind="value: cam_url"/></div>
			<div class="span2"><select class="input-block-level" data-bind="options: $root.cam_types,value: cam_type"></select></div>
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: cam_width"/></div>
			<div class="span2"><input type="text" class="input-block-level" data-bind="value: cam_height"/></div>			
			<div class="span1 btn-group" style="text-align: center;">
				<button class="btn btn-mini btn-primary icon-arrow-up" data-bind="click: $parent.moveUp.bind($parent, $index), disable: $index() == 0"></button>
				<button class="btn btn-mini btn-primary icon-arrow-down" data-bind="click: $parent.moveDown.bind($parent, $index), disable: ($index() === ($parent.webcams().length - 1))"></button>
			</div>
			<div class="span1 btn-group" style="text-align: center;"><button class="btn btn-mini btn-danger icon-trash" data-bind="click: $root.removeCamera"></button></div>
		</div>
	</div>
</form>